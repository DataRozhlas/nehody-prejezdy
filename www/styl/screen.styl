@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
  @import Geocoder
.ig
  .map
    position absolute
    top 0px
    left 0px
    bottom 0px
    width 100%
    background white
    border-top 1px solid #a
    border-bottom 1px solid #a
    pre
      font-family arial, sans-serif
      margin 0px
      padding-top 0px
      // padding-left 14px
      margin-top -14px
    .leaflet-div-icon
      border 0px none
      background rgba(255,255,255,0.5)
      border-radius 50%
      border 5px solid rgba(#67000d, 0.6)
      div
        border-radius 50%
        width 100%
        height 100%
        text-align center
        color white
        font-size 16px
        opacity 0.9
        position relative
        span
          position absolute
          margin-top 1px
          top 50%
          width 100%
          display block
          line-height 0px
